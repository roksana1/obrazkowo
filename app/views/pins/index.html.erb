<p id="notice"><%= notice %></p>

<h1>Lista pinów</h1>

<table>
  <thead>
    <tr>
      <th>OBRAZ</th><br />
      <th>OPIS</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'POKAŻ', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'EDYTUJ', edit_pin_path(pin) %></td>
          <td><%= link_to 'USUŃ', pin, method: :delete, data: { confirm: 'Czy jesteś pewny?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'NOWY', new_pin_path %>
